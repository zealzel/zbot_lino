# ===================================================
# simulation (all on pc)
# ===================================================

# === robot bringup ===
ros2 launch linorobot2_gazebo gazebo.launch.py # default world: turtlebot3_world
    # verbose
    ros2 launch linorobot2_gazebo gazebo.launch.py \
        world:=$(ros2 pkg prefix turtlebot3_gazebo)/share/turtlebot3_gazebo/worlds/turtlebot3_world.world x:=0.5 y:=0.1

# === teleop ===
ros2 run teleop_twist_keyboard teleop_twist_keyboard


# === simulation using rmf's traffic-editor generated world ===
ros2 launch linorobot2_gazebo sim.launch.py map_name:=fit_office # (default map_name: fit_office)

<<<----------------------------------------------------------------------->>>

# === slam mapping ===
ros2 launch linorobot2_navigation slam.launch.py

# === save the map ===
ros2 run nav2_map_server map_saver_cli -f mymap # pgm/yaml
    # serialized map for continuous mapping
    ros2 service call /slam_toolbox/serialize_map slam_toolbox/srv/SerializePoseGraph "filename: '$HOME/maps/mymap'" # serialized map for continuous mapping


# === navigation ===
ros2 launch linorobot2_navigation navigation.launch.py sim:=true rviz:=true
    # verbose
    ros2 launch linorobot2_navigation navigation.launch.py sim:=true rviz:true \
        map:="$(ros2 pkg prefix turtlebot3_navigation2)/share/map/map.yaml" \
        params_file:="$(ros2 pkg prefix linorobot2_navigation)/share/linorobot2_navigation/config/zbotlino/navigation.yaml"

# === navigation using traffic-editor generated gazebo world & slamed maps ===
ros2 launch linorobot2_navigation navigation_rmf.launch.py
    # verbose (default)
    ros2 launch articubot_one navigation_rmf.launch.py rviz:=true \
        map_name:=fit_office_res002_0926 \ # options: fit_office_res002_0926(default)
        params_file:="$(ros2 pkg prefix linorobot2_navigation)/share/linorobot2_navigation/config/zbotlino/navigation.yaml"


# === defined-route navigation ===
ros2 launch linorobot2_navigation navigation_keepout.launch.py sim:=true rviz:=true
    # verbose (default)
    ros2 launch linorobot2_navigation navigation_keepout.launch.py sim:=true rviz:=true \
        map:="$(ros2 pkg prefix linorobot2_navigation)/share/linorobot2_navigation/maps/turtlebot3_world.yaml" \
        mask:="$(ros2 pkg prefix linorobot2_navigation)/share/linorobot2_navigation/masks/keepout_mask_turtlebot3_world.yaml" \
        params_file:="$(ros2 pkg prefix linorobot2_navigation)/share/linorobot2_navigation/config/zbotlino/navigation_keepout.yaml"

# === defined_route navigation using traffic-editor generated gazebo world & slamed maps & homebrewed masks ===
ros2 launch linorobot2_navigation navigation_keepout_rmf.launch.py
    # verbose (default)
    ros2 launch linorobot2_navigation  navigation_keepout_rmf.launch.py sim:=true rviz:=true \
        map_name:=fit_office_res002_0926 \ # options: fit_office_res002_0926(default)
        mask:="$(ros2 pkg prefix linorobot2_navigation)/share/linorobot2_navigation/masks/keepout_mask_fit_office_res002_0926.yaml" \
        params_file:="$(ros2 pkg prefix linorobot2_navigation)/share/linorobot2_navigation/config/zbotlino/navigation_keepout.yaml"
